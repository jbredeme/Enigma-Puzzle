<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/img_background"
    tools:context="edu.jpb64nau.gameapp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:id="@+id/inputLL">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/loginLL"
            android:layout_marginBottom="24dp">

            <EditText
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/userNameTextInput"
                android:textSize="14sp"
                android:textColor="#F5F5F5"
                android:drawableLeft="@drawable/ic_account_box_black_24dp"
                android:drawableTint="#F5F5F5"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_above="@+id/userLabel"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:textAlignment="textStart" />

            <TextView
                android:text="USER NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userLabel"
                android:textColor="#E0E0E0"
                android:textSize="10sp"
                android:layout_above="@+id/loginButton"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:text="Log In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:textSize="12sp"
            android:layout_above="@+id/quickplayButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Quick Play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quickplayButton"
            android:textSize="12sp"
            android:layout_above="@+id/exitButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exitButton"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

</RelativeLayout>
